  "scripts": {
    "start": "react-scripts start",
    "prebuild": "node -e \"const n=process.versions.node.split('.'); if(Number(n[0])<18){console.error('Error: Node 18+ required. Current: '+process.version); process.exit(1);}\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postbuild": "node -e \"try { require('fs').statSync('build'); console.log('Build OK: build/'); } catch(e) { console.error('Build failed: build/ missing'); process.exit(1); }\""
  },
  "eslintConfig": {
    "extends": ["react-app", "react-app/jest"]
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
